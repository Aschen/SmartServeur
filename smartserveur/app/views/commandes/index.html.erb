<p id="notice"><%= notice %></p>

<h1>Listing Commandes</h1>

<table>
  <thead>
    <tr>
      <th>Quantite</th>
      <th>Produit</th>
      <th>Session</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commandes.each do |commande| %>
      <tr>
        <td><%= commande.quantite %></td>
        <td><%= commande.produit_id %></td>
        <td><%= commande.session_id %></td>
        <td><%= link_to 'Show', commande %></td>
        <td><%= link_to 'Edit', edit_commande_path(commande) %></td>
        <td><%= link_to 'Destroy', commande, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

